.ms2side__div {padding: 1px;float: left;}.ms2side__select {float: left;}.ms2side__header {color:#1a4375;font-size:14px;font-family:微软雅黑;line-height:18px;margin-bottom:10px;width: 220px;height: 20px;}.ms2side__options, .ms2side__updown {float: left;margin:0 8px;margin-top:30px;width: 48px;color:;text-align: center;overflow: hidden;}.ms2side__updown {font-size: 9pt;display:none;}.ms2side__options p, .ms2side__updown p {margin: 30px 0;padding: 0;cursor: pointer;background-image:url(images/ydbg.png);width:48px;height:20px;color:#1a4375;line-height:20px;text-align:center;}.ms2side__options p.ms2side_hover, .ms2side__updown p.ms2side_hover {background-color: #F0F0FF;border-color: #0000FF;cursor: pointer;}/*点击前*/.ms2side__options p.ms2side__hide, .ms2side__updown p.ms2side__hide {cursor: default;color: gray;background-image:url(images/ydbg.png);width:48px;height:20px;color:gray;line-height:20px;}/*点击后*/.ms2side__div select {width: 220px;height:320px;float: left;outline:none;border:solid 1px #1a4375;}/*搜索框*//* INPUT FOR SEARCH */.ms2side__header input {	width: 80px;	height: 12px;}.ms2side__header input.wait {	width: 80px;	height: 12px;	background: #FFFFFF url(../img/loading.gif) no-repeat center right;}.ms2side__header input.small {	width: 50px;	height: 12px;}/* INPUT FOR SELECT SEARCH */.ms2side__header select {width: 146px;height:18px;background-image:url(images/sbfp_sbsl.png);outline:none;border:none;background-color:transparent;font-size: 11px;height: 18px;float: none;padding-left:10px;}/* REMOVE FILTER OPTION FOR SEARCH */.ms2side__header a {	font-size: 10pt;	padding: 0 8px;	width: 16px;	height: 16px;	color: black;	text-align: center;	text-decoration: none;	border: 1px solid gray;	background: #FFFFFF url(../img/close.gif) no-repeat center center;	margin: 0 0 0 3px;}.ms2side__header a:hover {	background-color: #F0F0FF;	border-color: gray;}